                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-primary" />
                    <input type="reset" value="Reset Form" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </div>
}

